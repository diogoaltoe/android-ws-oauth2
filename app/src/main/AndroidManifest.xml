<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ws.droid">

    <!-- Request Internet connection -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Request to check Internet connection state -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="ws.droid.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ws.droid.activity.UserNewActivity"
            android:label="@string/title_activity_new"
            android:parentActivityName="ws.droid.activity.MainActivity">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ws.droid.activity.MainActivity" />
        </activity>
        <activity
            android:name="ws.droid.activity.UserListActivity"
            android:label="@string/button_list"
            android:parentActivityName="ws.droid.activity.MainActivity">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ws.droid.activity.MainActivity" />
        </activity>
        <activity android:name="ws.droid.activity.UserEditActivity"
            android:label="@string/title_activity_edit"
            android:parentActivityName="ws.droid.activity.UserListActivity">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ws.droid.activity.UserListActivity" />
        </activity>
    </application>

</manifest>